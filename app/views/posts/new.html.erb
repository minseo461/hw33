

<head>
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
</head>

<div class = "container">
    <%= form_for @post do |f| %>
    CATEGORY<br><%= f.select :category_id, options_from_collection_for_select(@categories, "id", "name") %> <br> 
    NAME<%= f.text_field :title, placeholder: '이름을 입력해주세요' %><br>
    CONTENTS<%= f.text_area :content, placeholder: '내용을 입력해주세요', rows: '5' %><br>
    <%= f.submit %>
    <% end %>
</div>

<body>
    <div class="container">
        <% @posts.each do |p| %>
            <div class="well">
                <b><%= p.id%>번째 글</b> <br>
                <hr>
                <b>CATEGORY</b><br> <%= p.category.name%><br>
                <b>Name</b> <br> <%= p.title %> <br>
                <b>CONTENTS</b> <br> <%= p.content %> <br>
                <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" > <%= link_to "수정", edit_post_path(p.id) %> </button>
                <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal2" ><%= link_to "삭제", p, method: :delete, data: { confirm: '삭제할거에요?' } %> </button>
                <br>            
            </div>
        <%end%>
    </div>
</body>



